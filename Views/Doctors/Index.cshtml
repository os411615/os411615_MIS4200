@model IEnumerable<os411615_MIS4200.Models.Doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Doctor Index Page</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.doctorFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.doctorLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.doctorEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.doctorPhone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.doctorFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doctorLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doctorEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doctorPhone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.doctorID }) <a span class="glyphicon glyphicon-pencil"></a> |
            @Html.ActionLink("Details", "Details", new { id=item.doctorID }) <a span class="glyphicon glyphicon-paperclip"></a> |
            @Html.ActionLink("Delete", "Delete", new { id=item.doctorID }) <a span class="glyphicon glyphicon-trash"></a>
        </td>
    </tr>
}

</table>
