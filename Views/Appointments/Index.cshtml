@model IEnumerable<os411615_MIS4200.Models.Appointment>

@{
    ViewBag.Title = "Index";
}

<h2>Appointment Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doctor.doctorFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.patientFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.appointmentDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor.doctorFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.patientFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.appointmentDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.appointmentID }) <a span class="glyphicon glyphicon-pencil"></a> |
            @Html.ActionLink("Details", "Details", new { id=item.appointmentID }) <a span class="glyphicon glyphicon-paperclip"></a> |
            @Html.ActionLink("Delete", "Delete", new { id=item.appointmentID }) <a span class="glyphicon glyphicon-trash"></a>
        </td>
    </tr>
}

</table>
